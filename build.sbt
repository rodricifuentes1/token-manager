organization := "co.rc"

name := "token-manager"

scalaVersion := "2.11.7"

description := "Customizable scala token manager"

resolvers ++= Dependencies.resolvers

libraryDependencies ++= Dependencies.all

scalacOptions ++= Seq(
  "-deprecation",
  "-encoding", "UTF-8",
  "-feature",
  "-language:existentials",
  "-language:higherKinds",
  "-language:implicitConversions",
  "-unchecked",
  "-Xfatal-warnings",
  "-Xlint",
  "-Yno-adapted-args",
  "-Ywarn-dead-code",
  "-Ywarn-numeric-widen",
  "-Ywarn-value-discard",
  "-Xfuture"
)